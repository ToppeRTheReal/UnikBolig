@using UnikBolig.Application;

<div class="col-md-12 justify-content-center align-content-center text-center">
    @{
        if(ViewBag.Qualifiers == null && ViewBag.User == null)
        {
            <center> <h3> @ViewBag.Message </h3> </center>
        }else if(ViewBag.Qualifiers == null && ViewBag.User != null)
        {
            <div class="col-md-12">
                <h3 class="text-center"> Denne bruger boer i denne bolig </h3>
                <div class="row">
                    <div class="col-md-2"> @ViewBag.User.FirstName @ViewBag.User.LastName </div>
                    <div class="col-md-2"> @ViewBag.User.Email </div>
                    <div class="col-md-2"> @ViewBag.User.Phone </div>
                    <div class="col-md-2"> <a href="/landlord/moveout/@ViewBag.EstateID"> <button class="btn btn-danger"> Flyt ud </button> </a> </div>
                </div>
            </div>
        }else
        {
            foreach(UnikBolig.Application.UserWithPoints item in ViewBag.Qualifiers)
            {
                <div class="col-md-12 row">
                    <div class="col-md-2"> <span> @item.FirstName @item.LastName </span> </div>
                    <div class="col-md-2"> <span> @item.Email </span> </div>
                    <div class="col-md-2"> <span> @item.Phone </span> </div>
                    <div class="col-md-2"> <span> @item.Points </span> </div>
                    <div class="col-md-2"> <span> @item.About </span> </div>
                    <div> <a href="/landlord/movein/@item.EstateID/@item.ID"> <button class="btn btn-primary"> Flyt ind </button> </a></div>
                </div>
            }
        }
    }
</div>