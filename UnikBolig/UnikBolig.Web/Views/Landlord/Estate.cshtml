@model UnikBolig.Models.EstateModel;

@{
    ViewData["Title"] = "Estate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Opret bolig</h1>

<hr />
<div class="row text-center">
    <div class="col-md-4">
        <h4 style="color: red;"> @ViewBag.Message </h4>
        <form asp-controller="Landlord" asp-action="CreateEstate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Navn</label>
                <textarea asp-for="Name" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Beskrivelse</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Navn</label>
                <select asp-for="RulesetID">
                    @{
                        foreach (UnikBolig.Models.EstateRulesetModel item in ViewBag.Rulesets)
                        {
                            <option value="@item.ID"> @item.Name </option>
                        }
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="control-label">m2</label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Gadenavn</label>
                <input asp-for="StreetName" class="form-control" />
                <span asp-validation-for="StreetName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Husnummer</label>
                <input asp-for="HouseNumber" class="form-control" />
                <span asp-validation-for="HouseNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Antal etager</label>
                <input asp-for="Floor" class="form-control" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Postnummer</label>
                <input asp-for="Postal" class="form-control" />
                <span asp-validation-for="Postal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">billede</label>
                <input asp-for="ImgUrl" class="form-control" />
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Udlej bolig" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
