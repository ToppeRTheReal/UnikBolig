@using Microsoft.AspNetCore.Http;

@model UnikBolig.Models.EstateModel;

<div class="col-md-12">
    <div class="col-md-12 row">
        <div class="col-md-6">
            <p style="color: red;"> @ViewBag.Message </p>
            <div class="col-md-12"> <h2> @Model.Name </h2> </div>
            <div class="col-md-12">
                <p>
                    @Model.Description
                </p>
            </div>
            <div class="col-md-12">
                @{
                    if (Context.Session.GetString("Token") != null)
                    {
                        <form method="post" asp-controller="User" asp-action="WriteUp">
                            <button class="btn btn-outline-primary"> Skriv dig op </button>
                        </form>
                    }else
                    {
                        <p> Login for at skrive dig op </p>
                    }
                }
            </div>
        </div>
        <div class="col-md-6">
            <img class="img-responsive" style="width: 100%;" src="@Model.ImgUrl" />
        </div>
    </div>
</div> 