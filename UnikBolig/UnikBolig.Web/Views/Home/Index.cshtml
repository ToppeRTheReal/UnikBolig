@using System.Collections.Generic;
@model List<UnikBolig.Models.EstateModel>;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Velkommen til UnikBolig</h1>
    <p>På denne side kan du søge efter boliger</p>
</div>


@{
    if (Model == null)
    {
        <h3 class="text-center">Hovsa ingen boliger fundet!</h3>
    }
    else
    {
        foreach (var item in Model)

   
        {
            <div class="albun py-5 ">
                <div>

                    <center>
                        <div class="row col-md-6">

                            <div class="col-sm">
                                <div class="card shadow-sm">
                                    <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="@item.ImgUrl" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false" />
                                    <div class="card-body">
                                        <h5 class="card">@item.Name</h5>
                                        <p>@item.StreetName @item.HouseNumber, @item.Postal </p>
                                        <p>@item.Description</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <a href="/bolig/@item.ID"><button type="button" class="btn btn-sm btn-outline-secondary">Se bolig</button></a>
                                            </div>
                                            <small class="text-muted"></small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </center>
                </div>
            </div>
                                    <br />
        }
    }


}

