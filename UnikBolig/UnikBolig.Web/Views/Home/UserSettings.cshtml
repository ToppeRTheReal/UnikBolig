                    <input class="form-check-input" asp-for="Dog" /> @Html.DisplayNameFor(model => model.Dog)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Cat" /> @Html.DisplayNameFor(model => model.Cat)
