@model UnikBolig.Models.UserDetailModel

@{
    ViewData["Title"] = "UserSettings";
}

<h1>UserSettings</h1>

<h4>UserDetailModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserSettings">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
