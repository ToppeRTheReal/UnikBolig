@model UnikBolig.Web.Models.LoginModel;
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Log in";

    Context.Session.Clear();
}
<div class="col-md-10 offset-1 text-center">
    <div class="login-form-icon">
        <i class="fas fa-user-circle fa-9x text-secondary"></i>
    </div>
    <h1>Log ind</h1>
    <h3 style="color: red;"> @ViewBag.Message </h3>

    <form id="account" method="post" asp-controller="User" asp-action="LoginUser">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group col-md-6 offset-md-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fas fa-envelope"></i>
                    </div>
                </div>
                <input asp-for="Email" class="form-control" placeholder="Email" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 offset-md-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fas fa-lock"></i>
                    </div>
                </div>
                <input asp-for="Password" class="form-control" placeholder="Adgangskode" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 offset-md-3">
            <button type="submit" class="btn btn-primary btn-block">Log ind</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
